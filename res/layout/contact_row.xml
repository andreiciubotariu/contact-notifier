<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/contact_img_container"
        layout="@layout/contact_image_container" />

    <View
        android:id="@+id/contact_vibrate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_img_container"
        android:layout_toLeftOf="@id/contact_vibrate"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/contact_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/contact_name"
        android:layout_below="@id/contact_name"
        android:layout_toRightOf="@id/contact_img_container"
        android:layout_toLeftOf="@id/contact_vibrate"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

</RelativeLayout>