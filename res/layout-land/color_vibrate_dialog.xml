<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorpicker="http://schemas.android.com/apk/res-auto"
    android:id="@+id/color_chooser"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:animateLayoutChanges="true"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include layout="@layout/contact_row" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.larswerkman.holocolorpicker.LinearColorPicker
            android:id="@+id/colorbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            colorpicker:bar_pointer_halo_radius="16dp"
            colorpicker:bar_pointer_radius="15dp" />

        <Button
            android:id="@+id/reset_color"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/colorbar"
            android:text="DC" />
    </RelativeLayout>

    <View
        style="@style/Divider"
        android:layout_width="match_parent" />

    <CheckBox
        android:id="@+id/vibrate_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Custom Vibrate"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/vib_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Off/on in milliseconds: off, on, off, on, etc"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <EditText
        android:id="@+id/vib_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789,"
        android:inputType="numberDecimal"
        android:visibility="gone" />

    <View
        style="@style/Divider"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />

        <View
            style="@style/Divider_Vertical"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/submit_color"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm" />
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_width="match_parent" />

</LinearLayout>