<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ciubotariu_levy.lednotifier"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ciubotariu_levy.lednotifier.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ciubotariu_levy.lednotifier.ColorActivity" />

        <receiver android:name="com.ciubotariu_levy.lednotifier.SMSReceiver" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.ciubotariu_levy.lednotifier.NotificationService"
            android:label="@string/service_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" >
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <provider
            android:name="com.ciubotariu_levy.lednotifier.providers.LedContactProvider"
            android:authorities="com.ciubotariu_levy.lednotifier.providers.LedContactProvider"
            android:exported="false" >
        </provider>

        <activity
            android:name="com.ciubotariu_levy.lednotifier.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        
         <activity
            android:name="com.ciubotariu_levy.lednotifier.SMSAppChooserContainer"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
        </activity>
    </application>

</manifest>