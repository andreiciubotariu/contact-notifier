<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ciubotariu_levy.lednotifier"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <receiver android:name="com.ciubotariu_levy.lednotifier.SMSReceiver" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.ciubotariu_levy.lednotifier.BootBroadcastReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.ciubotariu_levy.lednotifier.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ciubotariu_levy.lednotifier.ColorActivity" />
        <activity
            android:name="com.ciubotariu_levy.lednotifier.SettingsActivity"
            android:label="@string/title_activity_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ciubotariu_levy.lednotifier.MainActivity" />
        </activity>
        <activity
            android:name="com.ciubotariu_levy.lednotifier.AboutActivity"
            android:label="@string/title_activity_about" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ciubotariu_levy.lednotifier.MainActivity" />
        </activity>
        <activity
            android:name="com.ciubotariu_levy.lednotifier.SMSAppChooserContainer"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        
        <activity
            android:name="com.ciubotariu_levy.lednotifier.DefaultColorChooserContainer"
            android:theme="@style/TranslucentAppTheme" >
        </activity>

        <service
            android:name="com.ciubotariu_levy.lednotifier.NotificationService"
            android:label="@string/service_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" >
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
        <service
            android:name="com.ciubotariu_levy.lednotifier.ContactObserverService"
            android:label="@string/contact_observer_service_name" />

        <provider
            android:name="com.ciubotariu_levy.lednotifier.providers.LedContactProvider"
            android:authorities="com.ciubotariu_levy.lednotifier.providers.LedContactProvider"
            android:exported="false" >
        </provider>
    </application>

</manifest>